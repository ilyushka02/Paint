<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/setting_store_category">
        <EditTextPreference
            app:key="@string/setting_store_category"
            app:title="@string/setting_store_path_head"
            app:useSimpleSummaryProvider="true"/>
        <ListPreference
            app:defaultValue="png"
            app:entries="@array/format_entries"
            app:entryValues="@array/format_values"
            app:key="@string/settings_store_format_key"
            app:title="@string/setting_store_format_head"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

</PreferenceScreen>